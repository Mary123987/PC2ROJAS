@model PC2ROJAS.Models.Cliente

@{
    ViewData["Title"] = "Crear cuenta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e0f7fa; /* Fondo suave */
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Estilos de la barra de navegación */
        nav {
            background-color: #00acc1; /* Color de fondo de la barra de navegación */
            color: white;
            padding: 15px;
            text-align: center; /* Asegura que el contenido de la barra esté centrado */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%; /* Asegura que cubra todo el ancho */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        nav h2 {
            margin: 0;
            font-size: 24px;
        }

        .content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 100px; /* Añadir un espacio para que el contenido no se solape con la barra */
        }

        .container {
            background-color: #ffffff; /* Fondo blanco del contenedor */
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.2);
            width: 450px; /* Ancho del contenedor ajustado */
            max-width: 90%; /* Asegura que sea responsivo en pantallas más pequeñas */
            text-align: center; /* Centra todo el texto dentro del contenedor */
            border: 2px solid #00acc1; /* Borde moderno en tono azul */
        }

        h1 {
            color: #00acc1; /* Título en un azul moderno */
            margin-bottom: 20px;
            font-size: 28px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            color: #333;
            font-weight: bold;
            text-align: left; /* Alinea los labels a la izquierda */
        }

        input[type="text"],
        input[type="number"],
        input[type="email"],
        select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 15px;
            transition: border 0.3s;
        }

        input:focus,
        select:focus {
            border-color: #00acc1; /* Borde azul moderno al enfocar */
            outline: none;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #00acc1;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #00838f; /* Cambia el color al hacer hover */
        }

        .message {
            margin-top: 20px;
            color: #28a745;
            font-size: 18px;
        }

        /* Footer */
        footer {
            background-color: #00acc1;
            color: white;
            padding: 10px 0;
            text-align: center;
            margin-top: auto;
            position: relative;
            bottom: 0;
            width: 100%;
        }

    </style>
</head>
<body>


<div class="content">
    <div class="container">
        <h1>Crear Cuenta Bancaria</h1>
        <form asp-controller="Cliente" asp-action="Crear" method="post">
            <label for="nombreTitular">Nombre del Titular:</label>
            <input type="text" id="nombreTitular" name="nombreTitular" required>

            <label for="tipoCuenta">Tipo de Cuenta:</label>
            <select id="tipoCuenta" name="tipoCuenta" required>
                <option value="" disabled selected>Seleccione un tipo de cuenta</option>
                <option value="Ahorros">Ahorros</option>
                <option value="Corriente">Corriente</option>
                <option value="Inversiones">Inversiones</option>
            </select>

            <label for="saldoInicial">Saldo Inicial:</label>
            <input type="number" id="saldoInicial" name="saldoInicial" min="0" step="0.01" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <button type="submit">Crear Cuenta</button>
        </form>
        <h1 class="message">@ViewData["Message"]</h1>
    </div>
</div>

<!-- Footer -->
<footer>
    <p>&copy; 2024 Banco Online. Todos los derechos reservados.</p>
</footer>

<script src="script.js"></script>
</body>
</html>
